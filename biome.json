{
	"$schema": "https://biomejs.dev/schemas/2.0.6/schema.json",
	"formatter": {
		"enabled": true,
		"lineWidth": 80,
		"formatWithErrors": true
	},
	"assist": {
		"actions": {
			"source": {
				"organizeImports": "off"
			}
		}
	},
	"overrides": [
		{
			"includes": [
				"tsconfig.json"
			],
			"json": {
				"parser": {
					"allowComments": true,
					"allowTrailingCommas": true
				}
			}
		},
		{
			"includes": [
				"deployments/test-do/**/*.ts",
				"deployments/test-worker/**/*.ts"
			],
			"javascript": {
				"globals": [
					"DurableObjectState",
					"Env",
					"DurableObjectId",
					"ExportedHandler"
				]
			}
		}
	],
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error",
				"noUndeclaredVariables": "error"
			},
			"suspicious": {
				"noExplicitAny": "error",
				"useAwait": "error",
				"noImplicitAnyLet": "error"
			},
			"style": {
				"noImplicitBoolean": "error",
				"useCollapsedElseIf": "error",
				"useBlockStatements": "error",
				"noNegationElse": "error",
				"noNamespace": "error",
				"useImportType": "error"
			}
		}
	}
}